# Top-most EditorConfig file.
root = true

[*]
charset = utf-8
end_of_line = lf
max_line_length = 80
insert_final_newline = true
trim_trailing_whitespace = true

[*{py,pyi}]
indent_style = space
indent_size = 4
max_line_length = 100

[*{ts,js}]
indent_style = space
indent_size = 2
quote_type = single
max_line_length = 120

[*.toml]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[{Makefile,**.mk}]
# Makefiles require tabs for indentation.
indent_style = tab

[*.md]
max_line_length = off
